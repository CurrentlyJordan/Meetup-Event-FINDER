<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nyc.c4q.jordansmith.meetupeventbrowser.main.MainActivity">

    <TextView
        android:gravity="center"
        android:hint="Type in zipcode"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:textSize="@dimen/find_nearby_meetups_text_size"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Nearby Meetups" />
    <EditText
        android:inputType="number"
        android:gravity="center"
        android:maxLength="5"
        android:maxLines="1"
        android:imeOptions="actionGo"
        android:id="@+id/zipcode_edit_text"
        android:layout_gravity="center"
        android:layout_width="@dimen/zip_code_edit_text_width"
        android:layout_height="@dimen/zip_code_edit_text_height" />
    <Button
        android:id="@+id/search_button"
        android:layout_marginTop="30dp"
        android:text="Search"
        android:layout_gravity="center"
        android:layout_width="@dimen/zip_code_edit_text_width"
        android:layout_height="@dimen/zip_code_edit_text_height" />

</LinearLayout>
